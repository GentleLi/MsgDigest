<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.study.msgdigest.MainActivity">

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_60"
        android:text="Hello World!"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_md5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hello"
        android:layout_marginTop="@dimen/dp_30"
        android:text="md5"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_sha1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_md5"
        android:layout_marginTop="@dimen/dp_30"
        android:text="sha1"
        android:textColor="@color/colorPrimary" />


    <TextView
        android:id="@+id/tv_sign_md5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sha1"
        android:layout_marginTop="@dimen/dp_30"
        android:text="signMd5"
        android:textColor="@color/colorAccent" />


    <TextView
        android:id="@+id/tv_sign_sha1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sign_md5"
        android:layout_marginTop="@dimen/dp_30"
        android:text="signSha1"
        android:textColor="@color/colorAccent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_hello"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="hello" />

        <Button
            android:id="@+id/btn_md5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="md5" />


        <Button
            android:id="@+id/btn_sha1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="sha1" />


        <Button
            android:id="@+id/btn_sign_md5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="signMd5" />

        <Button
            android:id="@+id/btn_sign_sha1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="signSha1" />
    </LinearLayout>

</RelativeLayout>
